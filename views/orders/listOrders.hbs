<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">Danh sách đơn hàng</h4>
        <br>
        <div class="row px-3">
            <div class="px-2">
                <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search"
                    action="/list-products" method="GET">
                    <div class="input-group">
                        <input type="text" class="form-control bg-white border-0 small" name="nameProduct" placeholder="Nhập tên sản phẩm"
                            aria-label="Search" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search fa-sm"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="dropdown mt-10 float-right">
                <a class="btn btn-primary" href="#" role="button" id="dropdownMenuLink"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-filter"></i>
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="/list-products">All</a>
                    {{!-- <a class="dropdown-item" href="/list-products/branch/Apple">Apple</a>
                    <a class="dropdown-item" href="/list-products/branch/Samsung">Samsung</a>
                    <a class="dropdown-item" href="/list-products/branch/Oppo">Oppo</a>
                    <a class="dropdown-item" href="/list-products/branch/Xiaomi">Xiaomi</a>
                    <a class="dropdown-item" href="/list-products/branch/Vivo">Vivo</a>
                    <a class="dropdown-item" href="/list-products/branch/Realme">Realme</a> --}}
                    {{#each manufacturers}}
                        <a class="dropdown-item" href="/list-products/branch/{{{manufacturer}}}">{{manufacturer}}</a>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr class="text-center">
                        <th>Mã đơn hàng</th>
                        <th>Ngày đặt hàng</th>
                        <th>Tên khách hàng</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái đơn hàng</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each orders}}
                    <tr class="text-center align-middle">
                        <td class="align-middle text-left"><a href="/list-orders/order-detail/{{_id}}">{{_id}}</a></td>
                        <td class="align-middle text-left">{{orderDate}}</td>
                        <td class="align-middle text-left">{{idCustomer.name}}</td>
                        <td class="align-middle">{{total}}</td>
                        <td class="align-middle">{{orderStatus.statusName}}</td>
                    </tr>
                    {{/each}}


                </tbody>
            </table>

            <div>
                <nav aria-label="...">
                    <ul class="pagination">

                        <li class="page-item {{#unless canGoPrev}}disabled{{/unless}}">
                            <a class="page-link" href="?page={{prevPage}}">Previous</a>
                        </li>
                        {{#each pageItem}}
                        {{#if isActive}}
                        <li class="page-item active">
                            <span class="page-link">
                                {{value}}
                                <span class="sr-only">(current)</span>
                            </span>
                        </li>
                        {{else}}
                        <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
                        {{/if}}
                        {{/each}}


                        <li class="page-item {{#unless canGoNext}}disabled{{/unless}}">
                            <a class="page-link" href="?page={{nextPage}}">Next</a>
                        </li>

                    </ul>
                </nav>

            </div>
        </div>
    </div>
</div>