<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">Mã đơn hàng: {{order._id}}</h4>
        <br>
        <h6>Họ tên khách hàng: {{order.idCustomer.userName}}</h6>
        <h6>Số điện thoại: {{order.phone}}</h6>
        <h6>Ngày đặt hàng: {{order.orderTime}}</h6>
        <h6>Ngày giao hàng dự kiến: {{order.deliveryTime}}</h6>
        <h6>Địa chỉ: {{order.address}}</h6>
        <h6>Trạng thái đơn hàng: {{order.orderStatus.statusName}}</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-bordered table-order-detail" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr class="text-center">
                        <th>STT</th>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each details}}
                        <tr class="text-center align-middle">
                            <td class="align-middle text-center stt"></td>
                            {{!-- <td class="align-middle text-left"><a href="/list-products/view/{{idProduct._id}}">{{idProduct.name}}</a></td> --}}
                            <td class="align-middle text-left">{{idProduct.name}}</td>
                            <td class="align-middle">{{quantity}}</td>
                            <td class="align-middle">{{idProduct.discountprice}}₫</td>
                            <td class="align-middle">{{ftotal}}₫</td>
                        </tr>
                    {{/each}}


                </tbody>
            </table>

            <div>
                <h6>Tổng tiền: {{order.ftotal}}₫</h6>
                <h6>Phương thức thanh toán: {{order.paymentMethod}}</h6>
            </div>
            
            {{#if isPagination}}
            <div>
                <nav aria-label="...">
                    <ul class="pagination">

                        <li class="page-item {{#unless canGoPrev}}disabled{{/unless}}">
                            <a class="page-link" href="?page={{prevPage}}">Previous</a>
                        </li>
                        {{#each pageItem}}
                        {{#if isActive}}
                        <li class="page-item active">
                            <span class="page-link">
                                {{value}}
                                <span class="sr-only">(current)</span>
                            </span>
                        </li>
                        {{else}}
                            <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
                        {{/if}}
                        {{/each}}


                        <li class="page-item {{#unless canGoNext}}disabled{{/unless}}">
                            <a class="page-link" href="?page={{nextPage}}">Next</a>
                        </li>

                    </ul>
                </nav>

            </div>
            {{/if}}
           
        </div>
    </div>
    <div class="card-footer text-center">
        <a class="btn btn-info" href="../">Quay lại</a>
    </div>
</div>