<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">Thông tin chi tiết tài khoản người dùng</h4>
    </div>
    <div class="card-body">
        <div class="ads-grid py-43">
            <div class="container py-xl-4 py-lg-2">
                <div class="row">
                </div>	
                <br>
                <div class="container bootstrap snippet">
                    <div class="row">
                        <div class="col-sm-3"><!--left col-->
                            <div class="text-center">
                                <img src="{{accountInfo.avatar}}" class="avatar rounded-circle img-thumbnail" style="width: 10rem; height: 10rem" id="previewImg" alt="avatar">
    
                                <div class="mt-2 h5"><strong>{{accountInfo.name}}</strong></div>
                                
                            </div>
                            <br>                   
                        </div><!--/col-3-->
                        

                        <div class="col-sm-9">
                            <table class="table table-striped table-borderless">
                                <tbody>
                                    <tr>
                                        <th scope="row">Họ tên</th>
                                        <td>{{accountInfo.name}}</td>
                                    </tr>
                                    
                                    <tr>
                                        <th scope="row">Ngày sinh</th>
                                        {{#if accountInfo.DoB}}
                                            <td><input type="date" class="border-0 bg-white text-muted" value="{{accountInfo.DoB}}" disabled></td>
                                        {{else}}
                                            <td></td>
                                        {{/if}}
                                    </tr>
                                    <tr>
                                        <th scope="row">Giới tính</th>
                                        <td>{{accountInfo.gender}}</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Địa chỉ</th>
                                        <td>{{accountInfo.address}}</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Số điện thoại</th>
                                        <td>{{accountInfo.phoneNumber}}</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Email</th>
                                        <td>{{accountInfo.email}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div><!--/col-9-->
                    </div><!--/row-->
                </div>
            </div>
        </div>   
    </div>
    <div class="card-footer text-center">
        <a class="btn btn-info" href="/list-accounts">Quay lại</a>
    </div>
</div>