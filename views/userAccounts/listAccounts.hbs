<!-- DataTales Example -->
<div class="card shadow mb-4" id="loadTitle">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">Danh sách tài khoản người dùng</h4>
        <br>
        {{!-- <div class="mr-auto mt-10 d-block">
                <a class="btn btn-primary btn-rounded" href="/list-products/add-new-product"><i
                        class="fas fa-plus-circle"></i> Thêm sản phẩm</a>
            </div> --}}
        <div class="row px-3">
            {{!-- <div class="mr-auto mt-10 d-inline">
                <a class="btn btn-primary btn-rounded" href="/list-products/add-new-product"><i
                        class="fas fa-plus-circle"></i> Thêm sản phẩm</a>
            </div> --}}

            <div class="px-2">
                <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search"
                    action="/list-products" method="GET">
                    <div class="input-group">
                        <input type="text" class="form-control bg-white border-0 small" name="nameProduct" placeholder="Nhập tên sản phẩm"
                            aria-label="Search" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search fa-sm"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="dropdown mt-10 float-right">
                <a class="btn btn-primary" href="#" role="button" id="dropdownMenuLink"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-filter"></i>
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="/list-products">All</a>
                    <a class="dropdown-item" href="/list-products/branch/Apple">Apple</a>
                    <a class="dropdown-item" href="/list-products/branch/Samsung">Samsung</a>
                    <a class="dropdown-item" href="/list-products/branch/Oppo">Oppo</a>
                    <a class="dropdown-item" href="/list-products/branch/Xiaomi">Xiaomi</a>
                    <a class="dropdown-item" href="/list-products/branch/Vivo">Vivo</a>
                    <a class="dropdown-item" href="/list-products/branch/Realme">Realme</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr  class="text-center">
                        <th>Tên người dùng</th>
                        <th>Phân quyền</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each accounts}}
                    <tr id = "{{_id}}" class="text-center align-middle" >
                        <input type="hidden" value="{{_id}}" class="row-account-user">
                        <td class="align-middle text-left">
                            {{#if accountState}}
                                <i class="fas fa-user-lock text-danger"></i>
                            {{else}}
                                <i class="fas fa-user text-success"></i>
                            {{/if}}

                            {{userName}}
                            <span class="notify text-primary"></span>

                        </td>
                        <td></td>
                        <td class="align-middle">{{email}}</td>
                        <td class="align-middle">{{phoneNumber}}</td>
                        <td class="align-middle">
                            <!-- <button class="btn btn-success"><i class="fas fa-edit"></i></button> -->
                            <div class="dropdown">
                                <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span><i class="fas fa-edit"></i></span>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" id="dropdown-view-product" href="/list-accounts/{{_id}}">Xem thông tin chi tiết</a>
                                     
                                   {{#if accountState}}
                                       <a class="dropdown-item aaa" id="dropdown-edit-product"
                                         onclick="changeAccountState('{{_id}}','{{accountState}}'); ">Mở khóa tài khoản</a>
                                    {{else}}
                                        <a class="dropdown-item aaa" id="dropdown-delete-product"
                                        onclick="changeAccountState('{{_id}}','{{accountState}}');">Khóa</a>
                                    {{/if}}

                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}


                </tbody>
            </table>

            <div>
                <nav aria-label="...">
                    <ul class="pagination">

                        <li class="page-item {{#unless canGoPrev}}disabled{{/unless}}">
                            <a class="page-link" href="?page={{prevPage}}">Previous</a>
                        </li>
                        {{#each pageItem}}
                        {{#if isActive}}
                        <li class="page-item active">
                            <span class="page-link">
                                {{value}}
                                <span class="sr-only">(current)</span>
                            </span>
                        </li>
                        {{else}}
                        <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
                        {{/if}}
                        {{/each}}


                        <li class="page-item {{#unless canGoNext}}disabled{{/unless}}">
                            <a class="page-link" href="?page={{nextPage}}">Next</a>
                        </li>

                    </ul>
                </nav>

            </div>
        </div>
    </div>
</div>
<script type="text/x-handlebars-template" id="templateAccount">
    {{!-- <input type="hidden" value="\{{_id}}" class="row-account-user"> --}}
    <td class="align-middle text-left">
        \{{#if accountState}}
            <i class="fas fa-user-lock text-danger"></i>
        \{{else}}
            <i class="fas fa-user text-success"></i>
        \{{/if}}
        \{{name}}
        {{!-- <span class="notify text-primary"></span> --}}
    </td>
    <td class="align-middle">\{{email}}</td>
    <td class="align-middle">\{{phoneNumber}}</td>
    <td class="align-middle">
        <!-- <button class="btn btn-success"><i class="fas fa-edit"></i></button> -->
        <div class="dropdown">
            <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span><i class="fas fa-edit"></i></span>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" id="dropdown-view-product" href="#">Xem thông tin chi tiết</a>
                   
                \{{#if accountState}}
                     <a class="dropdown-item" id="dropdown-edit-product"
                        onclick="changeAccountState('\{{_id}}','\{{accountState}}')">Mở khóa tài khoản</a>
                \{{else}}
                    <a class="dropdown-item" id="dropdown-delete-product"
                    onclick="changeAccountState('\{{_id}}','\{{accountState}}')">Khóa tài khoản</a>
                \{{/if}}
            </div>
        </div>
    </td>
</script>